
@{
    ViewData["Title"] = "Index";

    @if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if (User.IsInRole("User"))
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }


}
@if (User.Identity.IsAuthenticated)
{
    <span>@User.Identity.Name</span>

    @if (User.IsInRole("Admin"))
    {
        <div>Admin içeriği</div>
    }
    <a asp-action="Logout" asp-controller="Account" class="btn btn-danger">
        Oturumu Kapat
    </a>
}
else
{
    <a asp-action="Login" asp-controller="Account" class="btn btn-success">
        Login
    </a>
        <a asp-action="Register" asp-controller="Account" class="btn btn-primary">
            Register
        </a>
}
